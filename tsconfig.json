{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "ES6"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,    
    "noEmit": true,
    "jsx": "react"
  },
  "rules": {
    "typedef": [
        true,
        "call-signature"
    ]
},
  "include": ["scripts/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}